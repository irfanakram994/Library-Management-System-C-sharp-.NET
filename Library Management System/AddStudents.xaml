<Window x:Class="Library_Management_System.AddStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Students" 
        Height="550" 
        Width="800" 
        WindowStartupLocation="CenterScreen" 
        Background="#F0F4F8">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Add Student" 
                   FontFamily="Cambria" 
                   FontWeight="Bold" 
                   FontSize="28" 
                   Foreground="#4A4A8D" 
                   HorizontalAlignment="Center" 
                   Margin="0,10"/>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="20,10">
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Student Name:" Width="150" VerticalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
                <TextBox x:Name="txtStudentName" Width="400" FontFamily="Cambria" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Enrollment No:" Width="150" VerticalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
                <TextBox x:Name="txtEnrollmentNo" Width="400" FontFamily="Cambria" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Email:" Width="150" VerticalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
                <TextBox x:Name="txtEmail" Width="400" FontFamily="Cambria" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Phone Number:" Width="150" VerticalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
                <TextBox x:Name="txtPhoneNumber" Width="400" FontFamily="Cambria" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Department:" Width="150" VerticalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
                <TextBox x:Name="txtDepartment" Width="400" FontFamily="Cambria" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Address:" Width="150" VerticalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
                <TextBox x:Name="txtAddress" Width="400" FontFamily="Cambria" FontSize="16"/>
            </StackPanel>

            <Button Content="Add Student" 
                    x:Name="btnAddStudent" 
                    Width="150" 
                    Height="40" 
                    HorizontalAlignment="Left" 
                    Background="#4A90E2" 
                    Foreground="White" 
                    FontFamily="Cambria" 
                    FontSize="16" 
                    Margin="0,20" 
                    Click="btnAddStudent_Click"/>
        </StackPanel>
    </Grid>
</Window>
