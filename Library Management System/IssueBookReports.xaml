<Window x:Class="Library_Management_System.IssueBookReports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Issue Book Reports" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Title -->
        <TextBlock Text="Issue Book Reports" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" />

        <!-- DataGrid to display the book issue details -->
        <DataGrid x:Name="BookIssueDataGrid" Margin="10,50,10,10" AutoGenerateColumns="True" />
    </Grid>
</Window>
